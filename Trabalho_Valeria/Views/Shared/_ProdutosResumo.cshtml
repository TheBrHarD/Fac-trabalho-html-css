@model Produto

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <h2>@Model.ImagemUrl</h2>
    <a asp-controller="Produto" asp-action="Details" class="text-uppercase"
       asp-route-produtoId="@Model.ProdutoId"><h5>@Model.NomeProduto</h5></a>

    <h4>Preço : @Model.Preco.ToString("c")</h4>

        <div>
            <p class="button">
                <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                asp-action="AdicionarItemNoCarrinhoCompra" asp-route-ProdutoId="@Model.ProdutoId">
                Comprar
            </a>
            </p>
        </div>
</div>
