@model CarrinhoCompraViewModel
<div class="container">
	<div class="row checkoutForm">
		<div  align="center">
         <img src="~/images/carrinho.png"/> <h4>Seu carrinho de compras: </h4>
		</div>

		<table class="table table-bordered table-striped">

			<thead>
				<tr>
					<th>Quantidade</th>
					<th>Produtos</th>
					<th class="text-right">Preço</th>
					<th class="text-right">Subtotal</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
				{
					<tr>
						<td class="text-center">@item.Quantidade</td>
						<td class="text-left text-uppercase">@item.Produto.NomeProduto</td>
						<td class="text-right">@item.Produto.Preco.ToString("c")</td>

						<td class="text-right">
							@((item.Quantidade * item.Produto.Preco).ToString("c"))
						</td>

						<td class="text-center">
							<a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra" 
						   asp-route-produtoId="@item.Produto.ProdutoId"><img src="~/images/lixeira.png"/>			
							</a>
						</td>
					</tr>
				}
			</tbody>
			<tfoot>
				<tr>
					<th colspan="3" class="text-sm-right">Total:</th>
					<td class="text-right">
						@Model.CarrinhoCompraTotal.ToString("c")
					</td>
				</tr>
			</tfoot>
		</table>


		<div class="text-right"
			<div class="form-group col-md-3">
				<a class="btn btn-success" asp-controller="Venda" asp-action="Checkout">Finalizar Compra</a> 
				<a class="btn btn-primary" asp-controller="Produto" asp-action="List">Continuar Comprando</a>
			</div>
		</div>
		<br />

</div>
</div>